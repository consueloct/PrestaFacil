}

<h1>Index</h1>

<h4>LoanApplicationMainViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EnterApplication">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
