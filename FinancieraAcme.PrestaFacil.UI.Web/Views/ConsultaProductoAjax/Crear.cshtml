@model FinancieraAcme.PrestaFacil.UI.Web.Models.Producto

@{
    ViewData["Title"] = "Crear";
}

<h1>Crear</h1>

<h4>Producto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Crear">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MontoMinimo" class="control-label"></label>
                <input asp-for="MontoMinimo" class="form-control" />
                <span asp-validation-for="MontoMinimo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MontoMaximo" class="control-label"></label>
                <input asp-for="MontoMaximo" class="form-control" />
                <span asp-validation-for="MontoMaximo" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Estado" /> @Html.DisplayNameFor(model => model.Estado)
                </label>
            </div>
            <div class="form-group">
                <input type="button" value="Grabar" id="btnGrabar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(document).ready(function () {
            $("#btnGrabar").click(function () {
                let producto = { //let to use variables for the for area, by code block
                    "Nombre": $("#Nombre").val(),
                    "Description": $("#Description").val(),
                    "MontoMinimo": $("#MontoMinimo").val(),
                    "MontoMaximo": $("#MontoMaximo").val(),
                    "Estado":$("#Estado").prop("checked")? true:false

                };
                $.ajax({//needs to anable CORS in Azure
                    type: "POST",
                    url: "/ConsultaProductoAjax/crear",
                    contentType: "application/json; charset=utf-8",
                    dataType: "json",
                    data: JSON.stringify(producto)//string with jason type
                })
                .done(function (result) {
                    if (result.exito) {
                        alert(result.mensaje);
                        location.href = '/ConsultaProductoAjax/Index'
                    }
                    else {
                        alert('No se pudo registrar el producto');
                    }
                })
                .fail(function (jqXHR, textStatus, errorThrown) {
                    alert('Ocurrio un error');
                })                
            });
        });
    </script>
}
